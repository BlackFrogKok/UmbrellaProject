<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.umbrellaproject" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UmbrellaProject" >
        <activity
            android:name="com.samsungschool.umbrellaproject.Auth.SignInActivity"
            android:exported="false" />
        <activity
            android:name="com.samsungschool.umbrellaproject.Activity.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.samsungschool.umbrellaproject.Activity.MainActivity"
            android:exported="false" />
    </application>

</manifest>